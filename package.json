{
  "name": "devops-assignment",
  "version": "1.0.0",
  "description": "Devops Backend",
  "main": "src/server.ts",
  "scripts": {
    "start": "nodemon",
    "clean": "rimraf dist",
    "transpile": "tsc",
    "lint": "tslint -c tslint.json 'src/**/*.{ts,js}'",
    "lint:fix": "tslint --fix -c tslint.json 'src/**/*.{ts,js}'",
    "build": "NODE_ENV=production run-s clean transpile",
    "prettier:check": "prettier --single-quote --print-width 120 --list-different src/**/*.ts",
    "prettify": "prettier --single-quote --print-width 120 --write src/**/*.ts",
    "format:code": "run-s lint:fix prettify",
    "prepare": "lefthook install"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "helmet": "^6.0.1",
    "http-status-codes": "^2.2.0",
    "mongoose": "^6.9.1",
    "morgan": "^1.10.0",
    "npm-run-all": "^4.1.5",
    "serve-favicon": "^2.5.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.13.0",
    "@types/serve-favicon": "^2.5.3",
    "lefthook": "^1.2.8",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.4",
    "rimraf": "^4.1.2",
    "tslint": "^6.1.3",
    "tslint-config-leapfrog": "^1.0.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.9.5"
  }
}
